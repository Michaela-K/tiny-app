<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <% if(user_id){ %>
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
        <% } else{ %>
          <a class="nav-item nav-link" href="/urls/new">Get Started</a>
        <% } %>
    </div>

      <div class =" d-flex justify-content-right">
        <% if(user_id){ %>
          <form class="form-inline justify-content-right" action="/logout"  method="POST">
            <div class="form-group mb-2">
              <label for="logout" style="margin-right: 2em"> Logged in as: 
              <%= user.email %>
              </label>
              <button type="submit" class="btn btn-outline-dark">Log Out</button>
            </div>
          </form>
          <% } else{ %>
          <form class="form-inline" action="/login" method="GET">
            <div class="form-group mb-2">
              <!-- <input class="form-control" type="text" name="username" placeholder="username" style="width: 250px; margin: 1em"> -->
              <button type="submit" class="btn btn-outline-secondary" style="margin-right: 2rem">Log In</button>
            </div>
          </form>
          <form class="form-inline justify-content-right" action="/register" method="GET">
            <div class="form-group mb-2">
              <button type="submit" class="btn btn-outline-secondary"> <a href="/register">Register</a> </button>
            </div>
          </form>
        <% } %>
  </nav>
</header>