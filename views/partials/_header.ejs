<header>
  <nav class="navbar navbar-expand-md" style="background-color: #5d41c2;">
    <a class="navbar-brand" href="/" style="color: #DBFE87;"><strong>TinyApp</strong></a>
    <button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <% if(user_id){ %>
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls" style="color: #03B5AA;" >My URLs</a>
          <a class="nav-item nav-link" href="/urls/new" style="color: #03B5AA;">Create New URL</a>
        </div>
        <% } else{ %>
          <a class="nav-item nav-link" href="/urls/new" style="color: #03B5AA;margin-right: 2em;">Get Started</a>
        <% } %>
    </div>

      <div class =" d-flex justify-content-right">
        <% if(user_id){ %>
          <form class="form-inline justify-content-right" action="/logout"  method="POST">
            <div class="form-group mb-2">
              <label for="logout" style="margin-right: 2em"> Logged in as: 
              <%= user.email %>
              </label>
              <button type="submit" class="btn btn-outline-dark">Log Out</button>
            </div>
          </form>
          <% } else{ %>
          <form class="form-inline" action="/login" method="GET">
            <div class="form-group mb-2">
              <!-- <input class="form-control" type="text" name="username" placeholder="username" style="width: 250px; margin: 1em"> -->
              <button type="submit" class="btn btn-outline-info" style="color: #DBFE87;margin-right: 1em;">Log In</button>
            </div>
          </form>
          <form class="form-inline justify-content-right" action="/register" method="GET">
            <div class="form-group mb-2">
              <button type="submit" class="btn btn-outline-info" style="color: #DBFE87;">Register</button>
            </div>
          </form>
        <% } %>
  </nav>
</header>